@keyframes slideDown {
  from {
    top: -50rpx;
    opacity: 0;
  }
  to {
    top: 105rpx;
    opacity: 1;
  }
}

.container {
  background-color: #e3e7e8;
}
.header {
  display: flex;
  width: 92%;
  height: 100rpx;
  padding: 0 4%;
  justify-content: space-between;
  align-items: center;
  background-color: #f2f2f2;
}
.home, .list {
  width: 50rpx;
  height: 50rpx;
}
.header .title {
  color: #5192fc;
  font-size: 36rpx;
  font-weight: 700;
}
.content {
  margin-top: 16rpx;
  padding-top: 20rpx;
  width: 100%;
  height: calc(100vh - 136rpx);
  background-color: #f1f1f1;
  font-size: 36rpx;
}
.introduction {
  padding: 0 30rpx 40rpx;
}
.list-item {
  padding: 0 40rpx 80rpx;
}
.list-item .title {
  height: 60rpx;
  font-weight: 700;
}
.drop-menu {
  display: none;
}
.drop-menu-show {
  animation: slideDown 400ms;
  display: block;
  position: fixed;
  top: 105rpx;
  right: 15rpx;
  background-color: #fff;
  border-radius: 15rpx;
  z-index: 100;
}
.menu-item {
  padding: 18rpx 80rpx;
  font-size: 32rpx;
  border-bottom: 1rpx solid #f3f5f8;
}
.menu-item:nth-last-child(1) {
  border-style: none;
}
